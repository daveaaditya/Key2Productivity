{
    "name": "Additional Keyboard Shortcuts to Google Chrome",
    "version": "1.0",
    "description": "An extension geared towards those who want more shortcuts!",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["tabs"],
    "manifest_version": 2,
    "commands": {
        "duplicate_tab": {
            "suggested_key": {
                "default": "Alt+Shift+D"
            },
            "description": "Duplicate a Tab."
        },
        "mute_tab": {
            "suggested_key": {
                "default": "Alt+Shift+M"
            },
            "description": "Mute a tab."
        },
        "new_right_tab": {
            "suggested_key": {
                "default": "Alt+Shift+W"   
            },
            "description": "Create a new tab to the right."
        },
        "new_left_tab": {
            "suggested_key": {
                "default": "Alt+Shift+Q"   
            },
            "description": "Create a new tab to the right."
        }
    }
}